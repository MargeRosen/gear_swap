<h2><%= title(@category.name, "Categories") %></h2>
<h2><%= @category.name %></h2>

<%= link_to "Edit Category | ", edit_category_path(@category) %>
<%= link_to "Delete Category | ",
      category_path(@category),
      :method => :delete,
      :confirm => "Are you sure you want to delete this category?" %>
<%= link_to "Back to Categories Page", categories_path %>

  <ul id='listings'>
  <% @category.listings.each do |listing| %>
    <li>
      #<%= listing.id %> -
      <%= link_to listing.title, [@category, listing] %>
    </li>
  <% end %>
  <h4><%= link_to "New Listing", new_category_listing_path(@category) %></h4>
</ul>

