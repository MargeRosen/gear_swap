<h2>Categories</h2>

    <% @categories.each do |category| %>
      <div class ="category_name"><%= link_to category.name, category %></div>
      <% admins_only do %>
      <div class = "btn"><%= link_to "Edit Category", edit_category_path(category) %></div>
      <div class = "btn"><%= link_to "Delete Category",
      category_path(category),
      :method => :delete,
      :confirm => "Are you sure you want to delete this category?" %></div>
      <% end %>
    <% end %>
    <p>
    <p>
  <% admins_only do %>
  <div class="btn btn-large"><%= link_to "New Category", new_category_path %></div>
<% end %>
</p>

